body{
margin:0;
padding:0;
text-align: center;
background-image:linear-gradient(rgba(0,0,0,0.5),rgba(0,0,0,0.5)), url(cake.png);
height: 180vh;
background-size: cover;
background-position: center;
font-family:  monospace;
}
.contact-title
{
margin-top: 50px;
color: #000;
text-transform: none;
transition: all 2s ease-in-out;
}
.contact-title h1
{
margin-top: 5px;
margin-bottom: 50px;
font-size: 30px;
line-height: 10px;
}
.contact-title h2 
{
margin-bottom:100px;
font-size: 25px;
}
form
{
margin-top: 50px;
transition: all 4s ease-in-out;
}


.form-control
{
width: 400px;

border: solid;
outline: none;
border-bottom: 1px solid gray;
color: #000;
background-color:#fff;
font-size:18px;
margin-bottom: 16px;
}
input
{
height : 45px;
}
form.submit
{
background: #000;
border-color: transparent;
color: #000;
font-size: 20px;
font-weight: bold;
letter-spacing: 2px;
height: 50px;
margin-top: 20px;
}
form.submit: hover
{
background-color: #f44336;

cursor: pointer;
}
.radio-inline
{
color: #fff;
}
.contact-form label
{
font-size:25px;
color: #fff;
}
